{
  "version": "0.2.0",
  "configurations": [
    // Backend Debugging (Node.js)
    {
      "name": "Debug Backend (Node.js)",
      "type": "node",
      "request": "launch", // This launches the Node.js server
      "program": "${workspaceFolder}/backend/src/server.js", // Path to your server.js file
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    // Frontend Debugging (React using Chrome)
    {
      "name": "Debug Frontend (React)",
      "type": "chrome",
      "request": "launch", // This launches the Chrome browser to debug React
      "url": "http://localhost:3000", // Assuming your frontend is running on this port
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMaps": true,
      "trace": true
    }
  ],
  "compounds": [
    // Compound configuration to start both frontend and backend simultaneously
    {
      "name": "Debug Backend and Frontend",
      "configurations": ["Debug Backend (Node.js)", "Debug Frontend (React)"]
    }
  ]
}
